{
  "name": "@rapideditor/pixi-texture-allocator",
  "version": "7.2.1",
  "author": "Ben Clark <bennyc@gmail.com",
  "description": "Pixi.js texture allocator",
  "repository": "github:rapideditor/texture-allocator",
  "license": "MIT",
  "keywords": [
    "pixijs",
    "texture-allocator",
    "texture-pool",
    "memory"
  ],
  "files": [
    "dist"
  ],
  "type": "module",
  "main": "./dist/pixi-texture-allocator.cjs",
  "module": "./dist/pixi-texture-allocator.mjs",
  "bundle": "./dist/pixi-texture-allocator.iife.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "import": "./dist/pixi-texture-allocator.mjs",
    "require": "./dist/pixi-texture-allocator.cjs"
  },
  "dependencies": {
    "@pixi/constants": "7.2.1",
    "@pixi/core": "7.2.1",
    "@pixi/math": "7.2.1"
  },
  "devDependencies": {
    "esbuild": "^0.17.12",
    "npm-run-all": "^4.1.5",
    "shx": "^0.3.4",
    "typescript": "^4.9.5"
  },
  "scripts": {
    "all": "run-s clean build",
    "clean": "shx rm -rf dist",
    "build": "run-s build:**",
    "build:browser": "esbuild ./src/index.ts --platform=browser --format=iife --global-name=PixiTextureAllocator --bundle --sourcemap --outfile=./dist/pixi-texture-allocator.iife.js",
    "build:cjs": "esbuild ./src/index.ts --platform=node --format=cjs --sourcemap  --outfile=./dist/pixi-texture-allocator.cjs",
    "build:mjs": "esbuild ./src/index.ts --platform=neutral --format=esm --main-fields=module,main --sourcemap --outfile=./dist/pixi-texture-allocator.mjs",
    "build:types": "tsc --declaration --out dist/index.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": "^12.20.0 || ^14.13.1 || >=16.0.0"
  }
}
